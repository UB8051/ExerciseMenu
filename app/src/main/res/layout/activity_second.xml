<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/labelmenu1"
    tools:context=".SecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:text="@string/label2"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="509dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hitungpersegi"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/persegi" />

                <ImageView
                    android:id="@+id/hitunglingkaran"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="50dp"
                    android:src="@mipmap/lingkaran" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="180dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hitungpersegipnj"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/persegipnj" />

                <ImageView
                    android:id="@+id/hitungsegitiga"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="50dp"
                    android:src="@mipmap/segitiga" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="280dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hitungtrapesium"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@mipmap/trapesium" />


            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/power"
            android:layout_width="83dp"
            android:layout_height="56dp"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="0dp"
            android:src="@mipmap/power">

        </ImageView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>